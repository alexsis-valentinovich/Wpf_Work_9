<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WinStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="TextBlStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="TextBlock.Background" Value="White"/>
        <Setter Property="TextBlock.Padding" Value="2"/>
        <Setter Property="TextBlock.TextAlignment" Value="Justify"/>
        <Setter Property="TextBlock.Foreground" Value="White"/>
    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="ToolBar.Background" Value="Gray"/>
        <Setter Property="ToolBar.Padding" Value="2"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="Button.Foreground" Value="White"/>
        <Setter Property="Button.BorderBrush" Value="White"/>
        <Setter Property="Button.Margin" Value="2"/>
        <Setter Property="Button.Padding" Value="2"/>
    </Style>
    <Style x:Key="CanvasStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="InkCanvas.Background" Value="Gray"/>
    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="MenuItem.Background" Value="Gray"/>
    </Style>
</ResourceDictionary>