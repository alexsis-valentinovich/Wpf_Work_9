<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="backGroud" Color="Gray"/>
    <SolidColorBrush x:Key="font" Color="White"/>
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource backGroud}"/>
        <Setter Property="Foreground" Value="{StaticResource font}"/>
    </Style>
    <Style TargetType="ToolBarTray">
        <Setter Property="Background" Value="{StaticResource backGroud}"/>
    </Style>
    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="{StaticResource backGroud}"/>
    </Style>
    <Style x:Key="WinStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>

    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="Button.Foreground" Value="White"/>
        <Setter Property="Button.BorderBrush" Value="White"/>
        <Setter Property="Button.Margin" Value="2"/>
        <Setter Property="Button.Padding" Value="2"/>
    </Style>
    <Style x:Key="ComboStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="ComboBox.Background" Value="{StaticResource backGroud}"/>
        <Setter Property="ComboBox.Foreground" Value="{StaticResource font}"/>
    </Style>
    <Style x:Key="CanvasStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="InkCanvas.Background" Value="Gray"/>
    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WinStyle}">
        <Setter Property="MenuItem.Background" Value="Gray"/>
    </Style>
</ResourceDictionary>